<UserControl x:Class="Chronicae.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:Chronicae.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <local:EqualityConverter x:Key="EqualityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer>
        <StackPanel Margin="24">
            <TextBlock Text="Dashboard" 
                      FontSize="28" 
                      FontWeight="SemiBold" 
                      Margin="0,0,0,32"
                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            
            <!-- Server Status Card -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                   CornerRadius="8" 
                   Padding="20" 
                   Margin="0,0,0,20"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0"
                              Text="Server Status" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,12"/>
                    
                    <!-- Status Indicator -->
                    <StackPanel Grid.Row="0" Grid.Column="1" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="#6B7280"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ServerStatus}" Value="Running">
                                            <Setter Property="Fill" Value="#10B981"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ServerStatus}" Value="Starting">
                                            <Setter Property="Fill" Value="#F59E0B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ServerStatus}" Value="Error">
                                            <Setter Property="Fill" Value="#EF4444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding ServerStatus}" 
                                  FontWeight="SemiBold"
                                  FontSize="14"/>
                    </StackPanel>
                    
                    <!-- Server Details -->
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Port: " 
                                      FontWeight="SemiBold" 
                                      Width="80"/>
                            <TextBlock Text="8843"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Access: " 
                                      FontWeight="SemiBold" 
                                      Width="80"/>
                            <TextBlock Text="Local Only"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="URL: " 
                                      FontWeight="SemiBold" 
                                      Width="80"/>
                            <TextBlock Text="http://localhost:8843"
                                      Foreground="{DynamicResource SystemControlHyperlinkTextBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Server Controls -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                               Orientation="Horizontal" 
                               Margin="0,16,0,0">
                        <Button Content="Start Server" 
                               Command="{Binding StartServerCommand}"
                               Margin="0,0,12,0"
                               Padding="16,8"
                               Style="{StaticResource AccentButtonStyle}">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource EqualityConverter}">
                                    <Binding Path="ServerStatus"/>
                                    <Binding Source="Stopped"/>
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                        <Button Content="Stop Server" 
                               Command="{Binding StopServerCommand}"
                               Padding="16,8">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource EqualityConverter}">
                                    <Binding Path="ServerStatus"/>
                                    <Binding Source="Running"/>
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Project Statistics Card -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                   CornerRadius="8" 
                   Padding="20" 
                   Margin="0,0,0,20"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Project Statistics" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding Projects.Count}" 
                                      FontSize="32" 
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock Text="Total Projects" 
                                      FontSize="14"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Notes.Count}" 
                                      FontSize="32" 
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock Text="Total Notes" 
                                      FontSize="14"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Recent Activity Card -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                   CornerRadius="8" 
                   Padding="20"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Recent Activity" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,12"/>
                    
                    <TextBlock Text="No recent activity" 
                              FontSize="14"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,20"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>