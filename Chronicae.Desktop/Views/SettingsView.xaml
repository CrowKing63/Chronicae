<UserControl x:Class="Chronicae.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:Chronicae.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <local:NotNullConverter x:Key="NotNullConverter"/>
        <local:NotConverter x:Key="NotConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer>
        <StackPanel Margin="24">
            <TextBlock Text="Settings" 
                      FontSize="28" 
                      FontWeight="SemiBold" 
                      Margin="0,0,0,32"
                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            
            <!-- Server Configuration Card -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                   CornerRadius="8" 
                   Padding="20" 
                   Margin="0,0,0,20"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Server Configuration" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,16"/>
                    
                    <!-- Port Setting -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                  Text="Port Number:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"/>
                        <ui:NumberBox Grid.Column="1" 
                                     Value="{Binding Port, Mode=TwoWay}"
                                     Minimum="1024"
                                     Maximum="65535"
                                     SpinButtonPlacementMode="Inline"
                                     VerticalAlignment="Center"/>
                        <Button Grid.Column="2" 
                               Content="Save Port" 
                               Padding="12,6"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource AccentButtonStyle}"
                               Command="{Binding SavePortCommand}"
                               IsEnabled="{Binding IsLoading, Converter={StaticResource NotConverter}}"/>
                    </Grid>
                    
                    <!-- External Access Setting -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Allow External Access" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            <TextBlock Text="Enable access from other devices on the network" 
                                      FontSize="12"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <ui:ToggleSwitch Grid.Column="1" 
                                        IsOn="{Binding AllowExternal, Mode=TwoWay}"
                                        VerticalAlignment="Center"
                                        Toggled="OnAllowExternalToggled"
                                        IsEnabled="{Binding IsLoading, Converter={StaticResource NotConverter}}"/>
                    </Grid>
                    
                    <!-- Server Status -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                           CornerRadius="4" 
                           Padding="12" 
                           BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                           BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Current Status: " 
                                      FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ServerStatus}"/>
                            <TextBlock Text=" • Restart required after changing settings" 
                                      FontSize="11"
                                      Margin="8,0,0,0"
                                      FontStyle="Italic"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Security Settings Card -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                   CornerRadius="8" 
                   Padding="20" 
                   Margin="0,0,0,20"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Security Settings" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,16"/>
                    
                    <!-- Access Token -->
                    <Grid Margin="0,0,0,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="Access Token" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            <TextBlock Text="Secure token required for API access. Generate a new token to invalidate existing ones." 
                                      FontSize="12"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Border Grid.Row="1" 
                               Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                               CornerRadius="4" 
                               Padding="12,8" 
                               Margin="0,0,0,8"
                               BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                               BorderThickness="1">
                            <TextBlock Text="••••••••••••••••••••••••••••••••••••••••••••••••" 
                                      FontFamily="Consolas"
                                      FontSize="12"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Border>
                        
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal">
                            <Button Content="Generate New Token" 
                                   Padding="12,6"
                                   Margin="0,0,12,0"
                                   Style="{StaticResource AccentButtonStyle}"
                                   Command="{Binding GenerateTokenCommand}"
                                   IsEnabled="{Binding IsLoading, Converter={StaticResource NotConverter}}"/>
                            <Button Content="Revoke Token" 
                                   Padding="12,6"
                                   Margin="0,0,12,0"
                                   Command="{Binding RevokeTokenCommand}"
                                   IsEnabled="{Binding HasAuthToken}"/>
                            <Button Content="Copy Token" 
                                   Padding="12,6"
                                   IsEnabled="{Binding HasAuthToken}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Application Settings Card -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                   CornerRadius="8" 
                   Padding="20"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Application Settings" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,16"/>
                    
                    <!-- Startup Setting -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Start with Windows" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            <TextBlock Text="Automatically start Chronicae when Windows starts" 
                                      FontSize="12"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <ui:ToggleSwitch Grid.Column="1" 
                                        IsOn="{Binding IsStartupEnabled, Mode=TwoWay}"
                                        VerticalAlignment="Center"
                                        Toggled="OnStartupToggled"
                                        IsEnabled="{Binding IsLoading, Converter={StaticResource NotConverter}}"/>
                    </Grid>
                    
                    <!-- System Tray Setting -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Minimize to System Tray" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            <TextBlock Text="Keep running in the background when window is closed" 
                                      FontSize="12"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <ui:ToggleSwitch Grid.Column="1" 
                                        IsOn="True"
                                        VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Data Location -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="Data Location" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            <TextBlock Text="Location where notes and configuration are stored" 
                                      FontSize="12"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <Border Grid.Row="1" 
                               Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                               CornerRadius="4" 
                               Padding="12,8" 
                               BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                               BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                          Text="%APPDATA%\Chronicae" 
                                          FontFamily="Consolas"
                                          FontSize="12"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <Button Grid.Column="1" 
                                       Content="Open Folder" 
                                       Padding="8,4"
                                       FontSize="11"/>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Status Message -->
            <Border Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                   CornerRadius="4" 
                   Padding="12,8" 
                   Margin="0,16,0,0"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1"
                   Visibility="{Binding StatusMessage, Converter={StaticResource NotNullConverter}}">
                <StackPanel Orientation="Horizontal">
                    <ui:ProgressRing Width="16" 
                                    Height="16" 
                                    IsActive="{Binding IsLoading}"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>